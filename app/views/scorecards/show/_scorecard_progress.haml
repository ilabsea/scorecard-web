.circles-list
  %ol
    / Start date (Planned started date)
    %li
      %a.btn.btn-link.pl-0.text-left= t("scorecard.planned_start_date")
      .at= l(@scorecard.planned_start_date, format: :nice)

    / Implemented date (conducted_date)
    %li
      %a.btn.btn-link.pl-0.text-left{class: ('disabled' unless @scorecard.conducted_date.present?)}= t("scorecard.implemented_date")

      - if @scorecard.conducted_date.present?
        %span.badge.badge-light.duration= distance_of_time_in_words(@scorecard.planned_start_date, @scorecard.conducted_date)

        .at= l(@scorecard.conducted_date, format: :nice)

    / In review date (submitted_date)
    %li
      %a.btn.btn-link.pl-0.text-left{class: ('disabled' unless @scorecard.submitted_at.present?)}= t("scorecard.in_review_date")

      - if @scorecard.finished_date.present?
        %span.badge.badge-light.duration= distance_of_time_in_words(@scorecard.conducted_date, @scorecard.finished_date)
        .at= l(@scorecard.finished_date, format: :nice)

    / Completed date (completed_date)
    %li
      %a.btn.btn-link.pl-0.text-left{class: ('disabled' unless @scorecard.completed_at.present?)}= t("scorecard.completed_date")

      - if @scorecard.completed_at.present?
        %span.badge.badge-light.duration= distance_of_time_in_words(@scorecard.submitted_at, @scorecard.completed_at)
        .at= l(@scorecard.completed_at, format: :nice)

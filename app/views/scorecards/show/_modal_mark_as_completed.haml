#confirmModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5.modal-title
          %i.fas.fa-exclamation-triangle.text-danger
          / Replace
          %span.title= t("scorecard.scorecards")
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—

      .modal-body.text-left
        %div
          = t("scorecard.data_connot_be_rollback_after_approve")
        %div
          = t("scorecard.are_you_sure_to_mark_as_completed", code: @scorecard.uuid).html_safe

      .modal-footer
        %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"}= t("shared.cancel")

        = link_to complete_scorecard_path(@scorecard.uuid), class: 'btn btn-primary', method: :put do
          = t("shared.approve")

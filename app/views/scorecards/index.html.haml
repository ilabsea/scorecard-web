.d-sm-flex.align-items-center.justify-content-between.mb-4
  %h1.h3.mb-0.text-gray-800= t("scorecard.scorecards")
  %div
    %a.btn.btn-secondary.btn-sm.shadow-sm{ href: scorecards_settings_ratings_path }
      %i.fas.fa-wrench.fa-sm.text-white-50
      = t("sidebar.settings")

    %a.btn.btn-primary.btn-sm.shadow-sm{ href: new_scorecard_path }
      %i.fas.fa-plus.fa-sm.text-white-50
      = t("shared.add_new")


.card.shadow.mb-4
  .card-body
    = render partial: "shared/no_data", locals: { items: @scorecards }

    - if @scorecards.present?
      = render "shared/pagination_title"

      %table.table.table-hover.pretty
        %thead
          %tr
            %th #
            %th ID
            %th= sortable "name", t('scorecard.name')
            %th= sortable "facility_id", t('scorecard.facility')
            %th= sortable "commune_code", t('scorecard.location')
            %th

        %tbody
          - @scorecards.each_with_index do |scorecard, index|
            %tr
              %td= scorecard.id
              %td
                = link_to scorecard.uuid, scorecard, class: 'btn btn-link p-0'
                = render 'scorecard_copy', scorecard: scorecard

              %td= scorecard.name
              %td= scorecard.facility.name
              %td= scorecard.location_name
              %td.text-right
                %button.btn{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                  %i.fas.fa-ellipsis-v

                .dropdown-menu.dropdown-menu-right
                  - if policy(scorecard).update?
                    = link_to edit_scorecard_path(scorecard), class: "btn dropdown-item" do
                      %i.fas.fa-pen.drop-menu-icon
                      %span= t('shared.edit')

                  - if policy(scorecard).destroy?
                    = link_to scorecard_path(scorecard), method: :delete, class: "btn dropdown-item", :data => {:confirm => t('scorecard.are_you_sure_to_delete')} do
                      %i.fas.fa-trash-alt.drop-menu-icon
                      %span= t('shared.delete')

    - if @pagy.pages > 1
      .pagy-wrapper
        != pagy_bootstrap_nav(@pagy)

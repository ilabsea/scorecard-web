%form#form.explicitForm{ action: '/scorecards', method: 'get', "data-remote": true }
  = hidden_field_tag :filter, params[:filter]

  #add-filter.position-relative
    .my-3
      .add-filter__saved_items_container.d-inline-block
        .add-filter__saved_item_template.d-none
          .add-filter__item.d-inline-block.p-1.mr-3

        = render partial: "scorecards/index/filter_item", collection: params[:uuid], as: :item, locals: { field: 'uuid' }
        = render partial: "scorecards/index/filter_item", collection: [params[:start_date].presence].compact, as: :item, locals: { field: 'start_date' }
        = render partial: "scorecards/index/filter_province", collection: @provinces, as: :item, locals: { field: 'province_id' }

      = link_to "#", id: "add-filter__link" do
        = t("scorecard.filter.add")

    = render "scorecards/index/add_filter_modal"

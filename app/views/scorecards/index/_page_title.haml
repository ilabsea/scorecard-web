.d-sm-flex.align-items-center.justify-content-between.mb-4
  %h1.h3.mb-0.text-gray-800= t("scorecard.scorecards")
  .mt-3.mt-md-0.text-right
    - if policy(Scorecard).setting?
      %a.btn.btn-secondary.btn-sm.shadow-sm{ href: setting_url }
        %i.fas.fa-wrench.fa-sm.text-white-50
        = t("sidebar.settings")

    - if policy(Scorecard).index?
      %a.btn.btn-warning.btn-sm.shadow-sm{ href: scorecards_path(params.permit(:start_date, :facility_id, :uuid, :filter,:year, :province_id, :local_ngo_id).merge(format: :xlsx)), target: '_blank' }
        %i.fas.fa-download
        = t('scorecard.download_excel')

    - if policy(Scorecard).create?
      %a.btn.btn-primary.btn-sm.shadow-sm{ href: new_scorecard_path }
        %i.fas.fa-plus.fa-sm.text-white-50
        = t("scorecard.add_new")

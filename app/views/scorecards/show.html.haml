#content
  = render 'shared/scorecard_tab_nav'

  .border-right.border-left.border-bottom.bg-white
    .card-body
      .row
        %label.col-sm-2.col-form-label= t("scorecard.id")
        %label.col-sm-10.col-form-label
          %input.input-for-copy{ value: @scorecard.uuid }
          = link_to '#', class: "btn btn-default btn-copy p-0 text-dark" do
            = " : #{@scorecard.uuid}"
            %i.far.fa-copy

      .row
        %label.col-sm-2.col-form-label= t("scorecard.year")
        %label.col-sm-10.col-form-label= " : #{@scorecard.year}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.name")
        %label.col-sm-10.col-form-label= " : #{@scorecard.name}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.unit_type")
        %label.col-sm-10.col-form-label= " : #{@scorecard.unit_type.name}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.facility")
        %label.col-sm-10.col-form-label= " : #{@scorecard.facility.name}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.scorecard_type")
        %label.col-sm-10.col-form-label= " : #{@scorecard.scorecard_type.humanize}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.conducted_date")
        %label.col-sm-10.col-form-label= " : #{@scorecard.conducted_date}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.description")
        %label.col-sm-10.col-form-label= " : #{@scorecard.description}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.location")
        %label.col-sm-10.col-form-label= " : #{@scorecard.location_name}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.number_of_participant")
        %label.col-sm-10.col-form-label= " : #{@scorecard.number_of_participant}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.number_of_female")
        %label.col-sm-10.col-form-label= " : #{@scorecard.number_of_female}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.number_of_caf")
        %label.col-sm-10.col-form-label= " : #{@scorecard.number_of_caf}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.number_of_disability")
        %label.col-sm-10.col-form-label= " : #{@scorecard.number_of_disability}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.number_of_ethnic_minority")
        %label.col-sm-10.col-form-label= " : #{@scorecard.number_of_ethnic_minority}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.number_of_youth")
        %label.col-sm-10.col-form-label= " : #{@scorecard.number_of_youth}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.number_of_id_poor")
        %label.col-sm-10.col-form-label= " : #{@scorecard.number_of_id_poor}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.planned_start_date")
        %label.col-sm-10.col-form-label= " : #{@scorecard.planned_start_date}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.planned_end_date")
        %label.col-sm-10.col-form-label= " : #{@scorecard.planned_end_date}"
      .row
        %label.col-sm-2.col-form-label= t("scorecard.status")
        %label.col-sm-10.col-form-label= " : #{@scorecard.status}"

= render "modal_scorecard_uuid"
= render "shared/toast_copy"

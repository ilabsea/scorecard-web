.w-50.view-center
  = simple_form_for @scorecard do |f|
    = f.input :year, label: t('scorecard.year')
    = render "unit_type_and_facility_fields", f: f
    = f.input :scorecard_type, collection: Scorecard::SCORECARD_TYPES

    = f.input :local_ngo_id, label: t("scorecard.implementer"), collection: current_program.local_ngos.pluck(:name, :id), include_blank: false
    = f.input :description

    = render "location_fields", f: f
    = render "date_field", f: f, field: :conducted_date
    = render "date_field", f: f, field: :planned_start_date
    = render "date_field", f: f, field: :planned_end_date

    .actions
      = f.submit t('shared.save'), class: 'btn btn-primary'
      = link_to t('shared.cancel'), scorecards_path, class: 'btn btn-secondary'

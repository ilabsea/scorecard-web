#content
  = render 'shared/scorecard_tab_nav'

  .border-right.border-left.border-bottom.bg-white
    .card-body
      %table.table.table-bordered
        %thead
          %tr
            %th{:scope => "col"} Which indicators have been raised?
            %th{:scope => "col"} How many times?
            %th{:scope => "col"} What indicator type?

        %tbody
          - @indicator[:predefineds].each do |indicator|
            %tr
              %td= indicator["name"]
              %td= indicator["count"]
              %td Predefined

          - @indicator[:customs].each do |indicator|
            %tr
              %td= indicator["name"]
              %td 1
              %td Custom

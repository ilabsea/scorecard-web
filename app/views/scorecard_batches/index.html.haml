.d-sm-flex.align-items-center.justify-content-between.mb-4
  %h1.h3.mb-0.text-gray-800= t('scorecard_batch.scorecard_batch')

  .d-flex.mt-3.mt-md-0.justify-content-end
    = render "shared/buttons/back_button", url: scorecards_path
    = render "shared/buttons/add_new_button", url: new_scorecard_batch_path, title: t('scorecard_batch.import_batch')

= render 'filter'

.card.shadow.mb-4
  .card-body
    = render partial: "shared/no_data", locals: { items: @scorecard_batches }

    - if @scorecard_batches.present?
      = render "shared/pagination_title", objects: @scorecard_batches

      .table-responsive
        %table.table.table-hover.pretty
          %thead
            %tr
              %th #
              %th= t("shared.code")
              %th= t("scorecard_batch.filename")
              %th= t("shared.description")
              %th= t('scorecard_batch.imported_at')
          %tbody
            - @scorecard_batches.each_with_index do |batch, index|
              %tr
                %td= index + 1
                %td= link_to batch.code, scorecards_path(batch_code: batch.code), class: 'text-primary'
                %td= batch.filename
                %td
                  = short_description(batch)
                  %span{'data-toggle' => 'tooltip', title: long_description(batch), 'data-html' => 'true'}
                    %i.fas.fa-info-circle
                %td= timeago(batch.created_at, 'datetime').html_safe

    - if @pagy.pages > 1
      .pagy-wrapper.justify-content-lg-end.justify-content-center
        != pagy_bootstrap_compact_nav(@pagy)

= render "shared/modal_confirm"

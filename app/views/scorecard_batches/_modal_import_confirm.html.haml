  .modal-dialog.modal-dialog-centered{:role => "document"}
    .modal-content.text-black
      .modal-header
        %h5.modal-title
          %i.fas.fa-exclamation-triangle.text-danger
          %span.title= t('scorecard_batch.confirm_title')

        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—

      .modal-body.text-left
        = t('scorecard_batch.confirm_message', total_item: @scorecard_batch.total_valid, total_province: @scorecard_batch.total_province, total_district: @scorecard_batch.total_district, total_commune: @scorecard_batch.total_commune).html_safe

      .modal-footer
        %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"}= t("shared.cancel")

        = f.submit t('scorecard_batch._yes'), class: 'btn btn-primary'

#content
  %nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container-fluid
      %h3= "#{@template.name}: #{t('indicator.indicators')}"
      %div
        = link_to templates_path, class: 'btn btn-info mr-2' do
          %i.fas.fa-chevron-left
          = t('shared.back')
        = link_to new_template_indicator_path(@template), class: 'btn btn-primary' do
          %i.fas.fa-plus

  = render partial: "shared/no_data", locals: { items: @indicators }

  - if @indicators.present?
    %table.table.table-hover.medium-width.pretty
      %thead
        %tr
          %th #
          %th= sortable "template_id", t('indicator.template')
          %th= sortable "tag", t('indicator.tag')
          %th

      %tbody
        = render partial: 'indicator', collection: @indicators

  - if @pagy.pages > 1
    .pagy-wrapper
      != pagy_bootstrap_nav(@pagy)

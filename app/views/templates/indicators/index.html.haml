.d-sm-flex.align-items-center.justify-content-between.mb-4
  %h1.h3.mb-0.text-gray-800= "#{@template.name}: #{t('indicator.indicators')}"
  %div
    = link_to templates_path, class: 'btn btn-info mr-2 btn-sm shadow-sm' do
      %i.fas.fa-chevron-left
      = t('shared.back')

    %a.btn.btn-primary.btn-sm.shadow-sm{ href: new_template_indicator_path(@template) }
      %i.fas.fa-plus.fa-sm.text-white-50
      = t("shared.add_new")

.card.shadow.mb-4
  .card-body
    = render partial: "shared/no_data", locals: { items: @indicators }

    - if @indicators.present?
      = render "shared/pagination_title"

      %table.table.table-hover.pretty
        %thead
          %tr
            %th #
            %th= sortable "name", t('indicator.name')
            %th= sortable "tag", t('indicator.tag')
            %th

        %tbody
          = render partial: 'indicator', collection: @indicators

    - if @pagy.pages > 1
      .pagy-wrapper
        != pagy_bootstrap_nav(@pagy)

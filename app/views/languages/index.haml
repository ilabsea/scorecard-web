= render "shared/scorecard_setting_tab_nav"

.card.shadow.mb-4
  .card-body
    = render partial: "shared/no_data", locals: { items: @languages, url: new_language_path, remote: true, label: t('language.add_new') }

    - if @languages.present?
      = render "shared/pagination_title", objects: @languages, url: new_language_path, remote: true, label: t('language.add_new'), hide_pagy: true

      %table.table.table-hover.pretty
        %thead
          %tr
            %th #
            %th= sortable "code", t("language.code")
            %th= sortable "name_en", t("language.name_en")
            %th= sortable "name_km", t("language.name_km")
            %th= sortable "created_at", t("shared.created_at")
            %th

        %tbody
          - @languages.each_with_index do |language, index|
            %tr
              %td= @pagy.from + index
              %td= language.code
              %td= language.name_en
              %td= language.name_km
              %td= timeago(language.created_at).html_safe
              %td.text-right
                = render 'shared/action_buttons', edit_url: edit_language_path(language), delete_url: language_path(language), object: language, remote: true

    - if @pagy.pages > 1
      .pagy-wrapper
        != pagy_bootstrap_nav(@pagy)

= render 'modal'
= render "shared/modal_confirm"

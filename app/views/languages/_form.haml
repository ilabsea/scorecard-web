.view-center
  = simple_form_for @language, remote: true do |f|
    = f.input :code, label: t('language.code')
    = f.input :name, label: t('language.name')

    .actions
      = f.submit t('shared.save'), class: 'btn btn-primary'
      %button.btn.btn-secondary{type: 'button', 'data-dismiss' => 'modal'}
        = t('shared.cancel')

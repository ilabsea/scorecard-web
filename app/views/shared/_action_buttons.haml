- if policy(object).update?
  = link_to edit_url, class: "btn btn-circle btn-sm btn-warning mr-2" do
    %i.fas.fa-pen

- if policy(object).destroy?
  = link_to delete_url, method: :delete, class: "btn btn-circle btn-sm btn-danger", :data => {:confirm => t('shared.are_you_sure_to_delete')} do
    %i.fas.fa-trash-alt

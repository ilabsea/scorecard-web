- objects ||= []
- url ||= ''
- label ||= t("shared.add_new")
- remote ||= false
- hide_pagy ||= false

.d-flex.mb-3.flex-grow-1
  - if objects.present?
    .pagy-wrapper.justify-content-lg-end.justify-content-center
      .d-flex.flex-grow-1
        .flex-1.d-flex.align-items-center.mb-2
          %span= t('shared.pagination_title', from: @pagy.from, to: @pagy.to, total: number_with_delimiter(@pagy.count)).html_safe

  .flex-grow-1
    = yield :pagination_title_center

  - if !hide_pagy && @pagy.pages > 1
    .d-lg-block.d-none
      != pagy_bootstrap_nav(@pagy)


  - if url.present? && policy(objects.class.to_s.split("::").first.constantize).create?
    %div
      = link_to url, remote: remote, class: "btn btn-primary btn-sm shadow-sm" do
        %i.fas.fa-plus.fa-sm.text-white-50
        %span.d-none.d-md-inline= label

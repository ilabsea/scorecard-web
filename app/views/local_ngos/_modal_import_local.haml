#importModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "Import from file", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#templateModalLabel.modal-title= t("shared.import_from_file")
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—

      = form_for '', url: import_local_ngos_path do |f|
        .modal-body.text-left
          .form-group
            .d-flex
              %label.flex-grow-1= t('shared.excel_file')
              %a.btn.btn-link.pl-0{ href: '/local_ngo_and_caf.xlsx', target: "_blank" }
                %i.fas.fa-cloud-download-alt.fa-sm
                = t("shared.download_sample_form")

            .form-control.file-control-wrapper
              = f.file_field :file, accept: ".xls,.xlsx"

        .modal-footer
          %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"}= t('shared.cancel')
          %button.btn.btn-primary{:type => "submit"}= t('shared.done')

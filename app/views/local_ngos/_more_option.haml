- if policy(LocalNgo).create?
  .text-right.d-flex.align-items-center
    .mr-1= render "shared/buttons/download_button", url: local_ngos_path(filter_params.merge(format: :xlsx))

    = render "shared/buttons/add_new_button", name: t("local_ngo.local_ngos"), url: new_local_ngo_path

    %button.btn{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
      %i.fas.fa-ellipsis-v

    .dropdown-menu.dropdown-menu-right
      %a.btn.dropdown-item{ href: new_local_ngo_importer_path }
        %i.fas.fa-file-import.drop-menu-icon
        = t("shared.import_from_file")

      %a.btn.dropdown-item{ href: local_ngo_importers_path }
        %i.fas.fa-eraser.dropdown-item-icon
        = t("local_ngo_batch.importing_local_ngo_history")

  = render "shared/modals/modal_import_excel"

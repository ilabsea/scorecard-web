= f.input :name, label: t('category.name')

.form-group
  %label Parent Category
  = f.select :parent_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" }, {:include_blank => true}, {class: 'form-control'}

.actions
  = f.submit t('shared.save'), class: 'btn btn-primary'
  = link_to t('shared.cancel'), categories_path, class: 'btn btn-secondary'

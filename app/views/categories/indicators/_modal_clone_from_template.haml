#exampleModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#exampleModalLabel.modal-title Clone from template
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—

      = form_for '', :url => clone_from_template_category_indicators_path(@category) do |f|
        .modal-body
          .form-group
            %label= t('indicator.template')
            - options = @templates.map{|template| ["#{template.name} (#{template.indicators.length} indicators)", template.id]}

            = select_tag "template_id", options_for_select(options), class: 'form-control'

        .modal-footer
          %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"}= t('shared.cancel')
          %button.btn.btn-primary{:type => "submit"}= t('shared.done')

#templateModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#templateModalLabel.modal-title Clone to template
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—

      = form_for '', :url => clone_to_template_category_indicators_path(@category) do |f|
        .modal-body
          .form-group
            %label= t('indicator.template_name')
            = text_field_tag 'template_name', '', class: 'form-control'

        .modal-footer
          %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"}= t('shared.cancel')
          %button.btn.btn-primary{:type => "submit"}= t('shared.done')

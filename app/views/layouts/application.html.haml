!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= ENV['APP_NAME']
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}

    = display_meta_tags SocialMetaTag.to_meta_tags
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'

    %link{:crossorigin => "anonymous", :href => "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css", :rel => "stylesheet"}
    %link{:href => "https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i", :rel => "stylesheet"}

    = favicon_link_tag asset_path('favicon.png')
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body{ id: css_class_name, class: "sidebar-toggled" }
    #wrapper{ 'data-date-format' => current_program.try(:datetime_format) }
      = render 'shared/sidebar'

      #content-wrapper
        = render 'shared/topbar'
        = render 'shared/test_mode_message'

        #content.container-fluid
          = render "shared/notify_message"
          = yield

    = render 'shared/button_scroll_to_top'
    = render 'shared/modal_logout'

#datetime-format.modal.fade{'aria-hidden' => 'true', 'aria-labelledby' => 'datetime format', :role => 'dialog', :tabindex => '-1'}
  .modal-dialog{:role => 'document'}
    .modal-content
      .modal-header
        .flex-row-vertical-center
          %h5#exampleModalLabel.modal-title
            = t('program.datetime_format')

        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button'}
          %span{'aria-hidden' => 'true'} Ã—

      .modal-body.form-inline
        .d-flex.align-items-center
          %label.mr-3= t('program.datetime_format')

          = f.input :datetime_format, collection: Program::DATETIME_FORMATS.keys, include_blank: false, label: false

      .modal-footer
        %button.btn.btn-secondary{type: 'button', 'data-dismiss' => "modal"}= t('shared.cancel')
        = f.submit t('shared.save'), class: 'btn btn-primary'

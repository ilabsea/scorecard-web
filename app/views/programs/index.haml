= render "shared/page_title", title: t("program.programs"), url: new_program_path

.card.shadow.mb-4
  .card-body
    = render partial: "shared/no_data", locals: { items: @programs }

    - if @programs.present?
      = render "shared/pagination_title", objects: @programs

      %table.table.table-hover
        %thead
          %tr
            %th= t('program.name')
            %th= t('program.shortcut_name')
            %th
        %tbody
          - @programs.each do |program|
            %tr
              %td= program.name
              %td= program.shortcut_name
              %td.text-right
                = link_to es_reindex_program_path(program), class: "btn btn-circle btn-sm btn-info mr-2", data: { toggle: 'tooltip', placement: 'top', title: t('program.es_reindex'), confirm: t('program.are_you_sure_to_reindex_elasticsearch_document')} do
                  %i.fas.fa-recycle

                = render 'shared/action_buttons', edit_url: edit_program_path(program), delete_url: program_path(program), object: program

    - if @pagy.pages > 1
      .pagy-wrapper
        != pagy_bootstrap_nav(@pagy)

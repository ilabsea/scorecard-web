%li
  %fieldset.fieldset.field-wrapper.mb-2
    .d-flex.align-items-center
      .d-flex.w-100
        .flex-1
          = f.input :contact_type, label: false, collection: Contact::CONTACT_TYPES, input_html: {class: 'flex-1 custom-select contact-type', 'data-placeholders' => placeholders.to_json}, include_blank: false

        .mr-1

        .flex-1
          = f.input :value, label: false, placeholder: get_placeholder(f.object.contact_type), input_html: {class: 'flex-1 contact-value'}

        .d-flex.align-items-start
          = f.hidden_field :_destroy

          %button.btn.text-danger.remove_fields
            %i.fas.fa-trash-alt.icon-delete

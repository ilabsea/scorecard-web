- error_msg = f.object.errors[:image]

.form-group
  %label.d-flex.align-items-center
    = "#{t('indicator.image')} "
    %small.text-muted (160px x 160px)
    .ml-1{data: { toggle: 'tooltip', html: 'true', placement: 'top', title: image_information}}
      %i.fas.fa-info-circle

  .image-wrapper
    = image_tag f.object.image_or_default, class: 'display-image', 'data-default' => image_path('default_image.png')
    = f.input :image, as: :file, label: false, wrapper_html: { class: 'file_wrapper' }, input_html: { class: 'image-file pointer', accept: "image/x-png,image/gif,image/jpeg" }

    = f.input :remove_image, as: :boolean, wrapper_html: { class: 'remove-file-wrapper'}, input_html: { class: 'remove-image-checkbock'}
    .btn-delete.pointer{class: ('d-none' unless f.object.image_url.present?) }
      %i.fas.fa-trash-alt.text-white

  - if error_msg.present?
    .invalid-feedback.d-block
      = error_msg.join('; ')

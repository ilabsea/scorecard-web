%form{ action: facility_indicators_path(@facility), method: 'get' }
  .form-row
    .form-group
      .input-group
        = text_field_tag(:name, params[:name], class: 'form-control search-input', placeholder: t('shared.search_by_name'), id: 'search-name')
        .input-group-append
          .input-group-text
            %i.fas.fa-search

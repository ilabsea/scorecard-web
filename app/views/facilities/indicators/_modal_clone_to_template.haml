#templateModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#templateModalLabel.modal-title Clone to template
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—

      = form_for '', :url => clone_to_template_facility_indicators_path(@facility) do |f|
        .modal-body
          .form-group
            %label
              = t('indicator.template_name')
              %abbr.abbr-required{:title => "required"} *

            = text_field_tag 'template_name', '', class: 'form-control', required: true

        .modal-footer
          %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"}= t('shared.cancel')
          %button.btn.btn-primary{:type => "submit"}= t('shared.done')

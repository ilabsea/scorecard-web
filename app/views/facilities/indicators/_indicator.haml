%tr
  %td= @pagy.from + indicator_counter
  %td= indicator.name
  %td
    %span.badge.badge-pill.badge-secondary= indicator.tag_name
  %td= l(indicator.created_at, format: :long)
  %td.text-right
    .d-flex.flex-row
      = render 'shared/action_buttons', edit_url: edit_facility_indicator_path(@facility, indicator), delete_url: facility_indicator_path(@facility, indicator), object: indicator

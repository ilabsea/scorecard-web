.d-sm-flex.align-items-center.justify-content-between.mb-4
  %h1.h3.mb-0.text-gray-800= t("primary_school.primary_schools")

  .d-flex
    %a.btn.btn-secondary.btn-sm.shadow-sm.mr-2{ "data-target" => "#importModal", "data-toggle" => "modal", href: '#' }
      %i.fas.fa-file-import.fa-sm.text-white-50
      = t("shared.import_from_file")

    %a.btn.btn-secondary.btn-sm.shadow-sm.mr-2{ href: '/primary_schools_sample.xlsx', target: "_blank" }
      %i.fas.fa-cloud-download-alt.fa-sm.text-white-50
      = t("shared.download_sample_form")

    %a.btn.btn-primary.btn-sm.shadow-sm{ href: new_primary_school_path }
      %i.fas.fa-plus.fa-sm.text-white-50
      = t("shared.add_new")

= render "modal_import_from_file"

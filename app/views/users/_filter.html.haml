%form{ action: '/users', method: 'get' }
  .form-row
    .form-group
      = hidden_field_tag :archived, params['archived']
      .input-group
        = text_field_tag(:email, params[:email], class: 'form-control search-email', placeholder: t('user.email'), id: 'email')
        .input-group-append
          .input-group-text
            %i.fas.fa-search

